<Window x:Class="Waze.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Waze - Ciudades y Carreteras" Height="800" Width="1300"
        WindowStartupLocation="CenterScreen"
        Background="#7CA37C">
    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <!-- Panel de controles más angosto -->
            <ColumnDefinition Width="210"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Panel de controles a la izquierda -->
        <StackPanel Grid.Column="0" Orientation="Vertical" Margin="0,0,10,0">
            <!-- Crear Ciudad -->
            <GroupBox Header="Crear Ciudad" Margin="0,0,0,6" Foreground="Black" FontSize="11">
                <StackPanel Orientation="Vertical" Margin="4">
                    <TextBlock Text="Nombre:" Foreground="Black" FontSize="10"/>
                    <TextBox x:Name="InputCiudad" Margin="0,0,0,2" FontSize="10" Height="18"/>
                    <TextBlock Text="Coordenada X:" Foreground="Black" FontSize="10"/>
                    <TextBox x:Name="InputX" Margin="0,0,0,2" FontSize="10" Height="18"/>
                    <TextBlock Text="Coordenada Y:" Foreground="Black" FontSize="10"/>
                    <TextBox x:Name="InputY" Margin="0,0,0,5" FontSize="10" Height="18"/>
                    <Button x:Name="BtnColocar" Content="Colocar Ciudad" Click="BtnColocar_Click" Height="20" FontSize="10"/>
                </StackPanel>
            </GroupBox>

            <!-- Espacio para futuras opciones -->
            <Border Height="12" Background="Transparent"/>

            <!-- Crear Carretera -->
            <GroupBox Header="Crear Carretera" Margin="0,0,0,6" Foreground="Black" FontSize="11">
                <StackPanel Orientation="Vertical" Margin="4">
                    <TextBlock Text="Ciudad de inicio:" Foreground="Black" FontSize="10"/>
                    <ListBox x:Name="ListBoxInicio" Height="28" Margin="0,0,0,2" DisplayMemberPath="Nombre" FontSize="10"/>
                    <TextBlock Text="Ciudad de fin:" Foreground="Black" FontSize="10"/>
                    <ListBox x:Name="ListBoxFin" Height="28" Margin="0,0,0,2" DisplayMemberPath="Nombre" FontSize="10"/>
                    <TextBlock Text="Tiempo de recorrido:" Foreground="Black" FontSize="10"/>
                    <TextBox x:Name="InputTiempo" Margin="0,0,0,5" FontSize="10" Height="18"/>
                    <Button x:Name="BtnCrearCarretera" Content="Crear Carretera" Click="BtnCrearCarretera_Click" Height="20" FontSize="10"/>
                </StackPanel>
            </GroupBox>

            <!-- Espacio para futuras opciones -->
            <Border Height="12" Background="Transparent"/>

            <!-- Crear Carro -->
            <GroupBox Header="Crear Carro" Margin="0,0,0,6" Foreground="Black" FontSize="11">
                <StackPanel Orientation="Vertical" Margin="4">
                    <Button x:Name="BtnCrearCarro" Content="Crear Carro Aleatorio" Click="BtnCrearCarro_Click" Height="20" FontSize="10"/>
                </StackPanel>
            </GroupBox>

            <!-- Espacio para futuras opciones -->
            <Border Height="12" Background="Transparent"/>

            <!-- Viajar -->
            <GroupBox Header="Viajar" Margin="0,0,0,6" Foreground="Black" FontSize="11">
                <StackPanel Orientation="Vertical" Margin="4">

                    <TextBlock Text="Velocidad:" Foreground="Black" FontSize="10"/>
                    <Slider x:Name="SliderVelocidad" Minimum="1" Maximum="100" Value="50" TickFrequency="1" IsSnapToTickEnabled="True" Margin="0,0,0,2" Height="16"/>
                    <TextBlock x:Name="LabelVelocidad" Text="Velocidad: 50" Foreground="Black" FontSize="10"/>
                    <Button x:Name="BtnViajar" Content="Viajar" Click="BtnViajar_Click" Height="20" FontSize="10"/>
                </StackPanel>
            </GroupBox>

            <!-- Espacio extra para futuras expansiones -->
            <Border Height="40" Background="Transparent"/>
        </StackPanel>

        <!-- Área de visualización a la derecha -->
        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Etiqueta de esquina -->
            <Label x:Name="CornerLabel" Grid.Row="0" Grid.Column="0" Width="24" Height="24" Background="#FF7CA37C" Foreground="White" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>

            <!-- Etiquetas horizontales -->
            <StackPanel x:Name="HorizontalLabelsPanel" Grid.Row="0" Grid.Column="1" Orientation="Horizontal" Height="24"/>

            <!-- Etiquetas verticales -->
            <StackPanel x:Name="VerticalLabelsPanel" Grid.Row="1" Grid.Column="0" Orientation="Vertical" Width="24"/>

            <!-- Canvas para la matriz y elementos visuales -->
            <Canvas x:Name="GridCanvas" Grid.RowSpan="3" Background="#7FD959" Margin="0,12,0,12" Grid.Column="1"/>
        </Grid>
    </Grid>
</Window>
