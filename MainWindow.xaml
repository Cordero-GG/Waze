<Window x:Class="Waze.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow"
        Background="#FFD3D3D3">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="180"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Controles de entrada -->
        <StackPanel Orientation="Horizontal" Margin="10" Grid.Row="0" Grid.Column="0" HorizontalAlignment="Left">
            <TextBlock Text="X:" VerticalAlignment="Center" Margin="0,0,2,0"/>
            <TextBox x:Name="InputX" Width="40" Margin="0,0,10,0"/>
            <TextBlock Text="Y:" VerticalAlignment="Center" Margin="0,0,2,0"/>
            <TextBox x:Name="InputY" Width="40" Margin="0,0,10,0"/>
            <TextBlock Text="Ciudad:" VerticalAlignment="Center" Margin="0,0,2,0"/>
            <TextBox x:Name="InputCiudad" Width="100" Margin="0,0,10,0"/>
            <Button x:Name="BtnColocar" Content="Colocar punto" Click="BtnColocar_Click"/>
        </StackPanel>

        <!-- Cuadrícula y labels -->
        <Grid Grid.Row="1" Grid.Column="0" HorizontalAlignment="Left" VerticalAlignment="Top" x:Name="OuterGrid">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Esquina vacía -->
            <Label x:Name="CornerLabel" Grid.Row="0" Grid.Column="0" Background="Transparent"/>

            <!-- Labels horizontales -->
            <StackPanel x:Name="HorizontalLabelsPanel"
                        Orientation="Horizontal"
                        Grid.Row="0"
                        Grid.Column="1"
                        VerticalAlignment="Top"
                        HorizontalAlignment="Left"/>

            <!-- Labels verticales -->
            <StackPanel x:Name="VerticalLabelsPanel"
                        Orientation="Vertical"
                        Grid.Row="1"
                        Grid.Column="0"
                        VerticalAlignment="Top"
                        HorizontalAlignment="Left"/>

            <!-- Canvas de la cuadrícula -->
            <Canvas x:Name="GridCanvas"
                    Grid.Row="1"
                    Grid.Column="1"
                    Background="#FFB9F6CA"/>
        </Grid>

        <!-- Panel lateral derecho para carreteras y carros -->
        <StackPanel Grid.Row="1" Grid.Column="1" Margin="10" VerticalAlignment="Top">
            <TextBlock Text="Inicio:" FontWeight="Bold" Margin="0,0,0,2"/>
            <ListBox x:Name="ListBoxInicio" Width="120" Height="60" Margin="0,0,0,8"/>
            <TextBlock Text="Destino:" FontWeight="Bold" Margin="0,0,0,2"/>
            <ListBox x:Name="ListBoxFin" Width="120" Height="60" Margin="0,0,0,8"/>
            <Button x:Name="BtnCrearCarretera" Content="Crear Carretera" Click="BtnCrearCarretera_Click" Width="120" Height="28" Margin="0,0,0,8"/>
            <Button x:Name="BtnCrearCarro" Content="Crear Carro" Click="BtnCrearCarro_Click" Width="120" Height="28"/>
        </StackPanel>
    </Grid>
</Window>
